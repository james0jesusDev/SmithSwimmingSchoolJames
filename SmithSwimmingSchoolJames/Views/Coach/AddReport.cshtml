@model SmithSwimmingSchoolJames.ViewModels.ProgressReportViewModel

<h2>Añadir Reporte de Progreso</h2>

<form asp-action="AddReport" method="post">
    <div class="form-group">
        <label for="CoachId">Seleccionar Coach:</label>
        <select asp-for="CoachId" class="form-control">
            <option value="">Seleccionar Coach</option>
            @foreach (var coach in Model.Coaches)
            {
                <option value="@coach.CoachId">@coach.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="StudentId">Seleccionar Alumno:</label>
        <select asp-for="StudentId" class="form-control">
            <option value="">Seleccionar Estudiante</option>
            @foreach (var student in Model.Students)
            {
                <option value="@student.StudentId">@student.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="Content">Habilidades Evaluadas:</label>
        <input asp-for="Content" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Comments">Comentarios:</label>
        <textarea asp-for="Comments" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
