﻿@using SmithSwimmingSchoolJames.Models
@model Coach

<div class="container">
    <div class="row">
        <div class="col-md-7 offset-3">
            <h2>Instructor Profile</h2>
            <form asp-action="EditProfile">
                <input type="hidden" asp-for="CoachId" />
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="CoachUser"></label>
                    <input asp-for="CoachUser" class="form-control" readonly="readonly" />
                </div>
                <br />
                <div class="text-center">
                    <button type="submit" class="btn btn-success">Save and Back to Coach home</button>
                </div>
            </form>
        </div>
    </div>
</div>