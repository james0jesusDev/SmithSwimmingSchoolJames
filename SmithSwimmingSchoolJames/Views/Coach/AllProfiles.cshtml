﻿@using SmithSwimmingSchoolJames.Models
@model IEnumerable<Coach>
@{
    ViewData["Title"] = "AllProfiles";
}

<h1>AllProfiles</h1>
<p><a class="btn btn-success" asp-action="AddProfile">Add an profile</a></p>

@if (Model.Count() < 1)
{
    <p>No Coach in the database yet</p>
}
else
{
    <h3>All Coach</h3>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Profile Name</th>
                <th>Telefono</th>
                <th>User Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var coach in Model)
            {
                <tr>
                    <td>@coach.CoachId</td>
                    <td>@coach.Name</td>
                    <td>@coach.PhoneNumber</td>
                    <td>@coach.CoachUser</td>
                    <td>
                        <a class="btn btn-success" asp-controller="Administrador" asp-route-id="@coach.CoachId" asp-action="EditProfile">Edit</a>
                    </td>
                </tr>
            }

            <div>
                <a class="btn btn-primary" asp-controller="Coach" asp-action="Index">Back to Coach Index</a>
            </div>

        </tbody>
    </table>
}