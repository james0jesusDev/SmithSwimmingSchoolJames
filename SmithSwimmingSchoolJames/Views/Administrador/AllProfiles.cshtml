﻿@using SmithSwimmingSchoolJames.Models
@model IEnumerable<Administrador>
@{
    ViewData["Title"] = "AllProfiles";
}

<h1>AllProfiles</h1>
<p><a class="btn btn-success" asp-action="AddProfile">Add an profile</a></p>

@if (Model.Count() < 1)
{
    <p>No Administrator in the database yet</p>
}
else
{
    <h3>All Administrator</h3>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Profile Name</th>
                <th>Email</th>
                <th>User Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var admin in Model)
            {
                <tr>
                    <td>@admin.AdministratorId</td>
                    <td>@admin.Administradorname</td>
                    <td>@admin.Email</td>
                    <td>@admin.AdministradorUser</td>
                    <td>
                        <a class="btn btn-success" asp-controller="Administrador" asp-route-id="@admin.AdministratorId" asp-action="EditProfile">Edit</a>
                    </td>
                </tr>
            }

            <div>
                <a class="btn btn-primary" asp-controller="Administrador" asp-action="Index">Back to Instructor Index</a>
            </div>

        </tbody>
    </table>
}