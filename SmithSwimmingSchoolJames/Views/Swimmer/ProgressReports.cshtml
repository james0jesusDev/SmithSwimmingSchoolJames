@model List<SmithSwimmingSchoolJames.Models.ProgressReport>

<h2>Informes de Progreso</h2>

@if (Model.Count == 0)
{
    <p>No hay informes de progreso disponibles.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Coach</th>
                <th>Fecha de Creación</th>
                <th>Contenido</th>
                <th>Comentarios</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in Model)
            {
                <tr>
                    <td>@report.Coach.Name</td>
                    <td>@report.CreatedAt.ToString("dd/MM/yyyy")</td>
                    <td>@report.Content</td>
                    <td>@report.Student.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
